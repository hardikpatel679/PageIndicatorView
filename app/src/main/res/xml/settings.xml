<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/settings">

        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="@color/default_value_activeIndicatorFillColor"
            android:key="@string/key_activeIndicatorFillColor"
            android:title="@string/title_activeIndicatorFillColor"/>

        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="@color/default_value_activeIndicatorStrokeColor"
            android:key="@string/key_activeIndicatorStrokeColor"
            android:title="@string/title_activeIndicatorStrokeColor"/>

        <EditTextPreference
            android:defaultValue="15"
            android:dialogTitle="@string/title_activeIndicatorFillSize"
            android:inputType="number"
            android:key="@string/key_activeIndicatorFillSize"
            android:title="@string/title_activeIndicatorFillSize"/>

        <EditTextPreference
            android:defaultValue="1"
            android:dialogTitle="@string/title_activeIndicatorStrokeWidth"
            android:inputType="number"
            android:key="@string/key_activeIndicatorStrokeWidth"
            android:title="@string/title_activeIndicatorStrokeWidth"/>

        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="@color/default_value_inactiveIndicatorFillColor"
            android:key="@string/key_inactiveIndicatorFillColor"
            android:title="@string/title_inactiveIndicatorFillColor"/>

        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="@color/default_value_inactiveIndicatorStrokeColor"
            android:key="@string/key_inactiveIndicatorStrokeColor"
            android:title="@string/title_inactiveIndicatorStrokeColor"/>

        <EditTextPreference
            android:defaultValue="10"
            android:dialogTitle="@string/title_inactiveIndicatorFillSize"
            android:inputType="number"
            android:key="@string/key_inactiveIndicatorFillSize"
            android:title="@string/title_inactiveIndicatorFillSize"/>

        <EditTextPreference
            android:defaultValue="1"
            android:dialogTitle="@string/title_inactiveIndicatorStrokeWidth"
            android:inputType="number"
            android:key="@string/key_inactiveIndicatorStrokeWidth"
            android:title="@string/title_inactiveIndicatorStrokeWidth"/>

        <EditTextPreference
            android:defaultValue="10"
            android:dialogTitle="@string/title_indicatorGap"
            android:inputType="number"
            android:key="@string/key_indicatorGap"
            android:title="@string/title_indicatorGap"/>

        <EditTextPreference
            android:defaultValue="@integer/default_value_initialPageIndex"
            android:dialogTitle="@string/title_initialPageIndex"
            android:inputType="number"
            android:key="@string/key_initialPageIndex"
            android:title="@string/title_initialPageIndex"/>

        <EditTextPreference
            android:defaultValue="@integer/default_value_pageCount"
            android:dialogTitle="@string/title_pageCount"
            android:inputType="number"
            android:key="@string/key_pageCount"
            android:title="@string/title_pageCount"/>

    </PreferenceCategory>

</PreferenceScreen>
<resources>

    <declare-styleable name="PageIndicatorView">
        <attr name="piv_pageCount" format="integer" />
        <attr name="piv_initialPageIndex" format="integer" />
        <attr name="piv_activeIndicatorSize" format="dimension" />
        <attr name="piv_inactiveIndicatorSize" format="dimension" />
        <attr name="piv_indicatorGap" format="dimension" />
        <attr name="piv_activeIndicatorColorFill" format="color" />
        <attr name="piv_activeIndicatorColorStroke" format="color" />
        <attr name="piv_inactiveIndicatorColorFill" format="color" />
        <attr name="piv_inactiveIndicatorColorStroke" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleIndicatorView">
        <attr name="civ_diameter" format="dimension" />
        <attr name="civ_fillColor" format="color" />
        <attr name="civ_strokeColor" format="color" />
        <attr name="civ_strokeWidth" format="dimension" />
    </declare-styleable>

</resources>